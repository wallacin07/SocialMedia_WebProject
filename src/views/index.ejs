<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/css/cores.css">
    <link rel="stylesheet" href="/css/index/style.css">
    <link rel="icon" href="/img/img_kangoroo/logo.png">
    <title>Login</title>
</head>
<body class="">

    <% if (typeof erroConta !== 'undefined' && erroConta) { %>
        <script>
            const erroConta = '<%= erroConta %>';
        </script>
    <% } %>

    <% if (typeof erroDesativado !== 'undefined' && erroDesativado) { %>
        <script>
            const erroDesativado = '<%= erroDesativado %>';
        </script>
    <% } %>
    

    <main>
        <img src="/img/img_kangoroo/logo.png" alt="Logo" id="logo">

        <section class="rect">

            <h1 class="title"><b>Kangoroo</b></h1>

            <form action="/login" method="post" class="form">
                <div class="group">
                    <label for="name">Nome:</label>
                    <input type="text" class="input" id="name" name="name" placeholder="Fulano da Silva">
                </div>
    
                <div class="group">
                    <label for="password">Senha:</label>
                    <input type="password" class="input" id="password" name="password" placeholder="•••••••••••••••">
                </div>
                
                <button type="submit" class="btnEnter"><b>Entrar</b></button>

            </form>

            <a href="/loadRegister">Não tem uma conta?</a>

        </section>
    </main>

    <script src="/scripts/login/script.js"></script>
    <script src="/scripts/themeController.js"></script>

</body>
</html>