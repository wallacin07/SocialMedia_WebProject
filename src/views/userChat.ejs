                </svg>
                <h1>Chats</h1>
            </a>
            <!-- Bot達o Profile -->
            <a href="/profilePag/<%= id %>" class="aNav">
                <svg class="iconeNav" viewBox="0 0 32 32" id="Stock_cut" version="1.1" xml:space="preserve"
                    xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <desc />
                    <g>
                        <circle cx="16" cy="16" fill="none" r="15" stroke="currentColor" stroke-linejoin="round"
