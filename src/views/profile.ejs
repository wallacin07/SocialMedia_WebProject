                    <article class="centralize w-100 d-flex">
                        <div class="profile w-100">
                            <section class="profile-info w-100">

                                <div class="d-flex column w-100">

                                    <div class="d-flex row w-100 between aaaa">

                                        <div class="profile-followers quadradinho">
                                            <h3>Seguidores</h3>
                                            <h4>70</h4>
                                        </div>
                                        <div class="profile-image">
                                            <img src="/img/profile_pictures/<%=  users.profilePhoto %>" alt=""
                                                class="image">
                                        </div>

                                        <div class="profile-followins quadradinho">
                                            <h3>Seguindo</h3>
                                            <h4>220</h4>

                                        </div>

                                    </div>
                                    <section>
                                        <div class="profile-name centralize">
                                            <h4>
                                                <b>
                                                    <%= users.name %>
                                                </b>
                                            </h4>
                                        </div>
                                        <div class="profile-description centralize">
                                            <h5>
                                                <%= users.description %>
                                            </h5>
                                        </div>
                                    </section>

                                </div>
                                <div class="profileEdit-box">
                                    <button type="button" class="btn profile-edit" id="editPerfil">Editar Perfil</button>
                                </div>

                            </section>

                            <section class="imgPost-box">


                                <% for (let i=0; i<posts.length; i++) { %>
                                    <a class="botaoPost" data-for="<%= i %>">
                                        <img src="/img/img_posts/<%= posts[i].img %>" alt="" class="image-post">
                                    </a>

                                    <div class="modal" data-modal="<%= i %>">
                                        <div class="modal-content-post d-flex column">
                                            <div class="modal-header d-flex text-center">
                                                <span class="close-post">&times;</span>
                                                <h2>Post</h2>
                                            </div>
                                            <div class="modal-body-post d-flex center">
                                                <div>
                                                    <img src="/img/img_posts/<%= posts[i].img %>" alt=""
                                                        class="post-image-modal">
                                                </div>
                                            </div>
                                            <div class="modal-footer-post">
                                                <h4>
                                                    <%= posts[i].description %>
                                                </h4>
                                                <button type="button" id="btn-comment-open"> ver comentarios</button>
                                            </div>
                                        </div>
                                    </div>


                                <% } %>

                            </section>
                        </div>

                    </article>

