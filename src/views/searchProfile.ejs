    <main>

        <div class="centralize">
            <div class="quadrado">
                <section class="centralize">
                    <h1 class="title">Kangoroo</h1>
                </section>

                <section class="informacoes">
                    <div class="quadradinho">
                        <h3>Seguidores</h3>
                        <h4 class="centralize">70</h4>
                    </div>
                    <div class="profile-image">
                        <img src="/profile_pictures/<%=  user.profilePhoto %>" alt="" class="imgPerfil">
                    </div>
                    
                    <div class="quadradinho">
                        <h3>Seguindo</h3>
                        <h4 class="centralize">220</h4>    
                    </div>
                </section>

                <section>
                    <div class="centralize">
                        <h3><%= user.name %></h3>
                    </div>
                    <div class="centralize">
                        <h4><%= user.description %></h4>
                    </div>
                    <div class="centralize">
                        <button class="botaoFollow">Follow</button>
                    </div>
                </section>
                    
                <section class="imgPost-box">
                    <% if (typeof posts !== 'undefined') { %>
                        <% posts.forEach((post, index) => { %>
                            <a href="#" class="botaoPost" data-modal-id="modal-<%= index %>">
                                <img src="/img/img_posts/<%= post.img %>" alt="<%= post.img %>" class="imgPost">
                            </a>
                
                            <!-- Modal -->
                            <section class="modalPost" id="modal-<%= index %>">
                                <button class="botaoFechar" data-modal-id="modal-<%= index %>">
                                    <svg class="fechar" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M20.7457 3.32851C20.3552 2.93798 19.722 2.93798 19.3315 3.32851L12.0371 10.6229L4.74275 3.32851C4.35223 2.93798 3.71906 2.93798 3.32854 3.32851C2.93801 3.71903 2.93801 4.3522 3.32854 4.74272L10.6229 12.0371L3.32856 19.3314C2.93803 19.722 2.93803 20.3551 3.32856 20.7457C3.71908 21.1362 4.35225 21.1362 4.74277 20.7457L12.0371 13.4513L19.3315 20.7457C19.722 21.1362 20.3552 21.1362 20.7457 20.7457C21.1362 20.3551 21.1362 19.722 20.7457 19.3315L13.4513 12.0371L20.7457 4.74272C21.1362 4.3522 21.1362 3.71903 20.7457 3.32851Z" fill="currentColor"/>
                                    </svg>
                                </button>
                                <div class="publicacaoModal">
                                    <img src="/img/img_posts/<%= post.img %>" alt="<%= post.img %>" class="imgPostModal">
                                    <div class="comentarios">
                                        <section>
                                            <div class="comentario">
                                                <h4><b>@Jurema_oi </b>Que lindo, adorei, aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</h4>
                                            </div>
                                        </section>
                                        <form action="" method="post">
                                            <!-- Form content -->
                                        </form>
                                    </div>
                                </div>
                            </section>
                        <% }) %>
                    <% } else { %>
                        <p>Usuário sem posts</p>
                    <% } %>
                </section>
                
            </div>
        </div>

    </main>

    <img src="/img/img_kangoroo/logo.png" alt="logo" class="logo"> 

    </section>

    

